{
  "name": "myoutfitapp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "test": "jest",
    "test-detox": "detox build && detox test"
  },
  "dependencies": {
    "aws-amplify": "^1.1.17",
    "aws-amplify-react-native": "^2.1.5",
    "buffer": "^5.2.1",
    "react": "16.6.3",
    "react-native": "0.57.8",
    "react-native-elements": "^0.19.1",
    "react-native-fetch-blob": "^0.10.8",
    "react-native-gesture-handler": "^1.0.12",
    "react-native-image-picker": "^0.27.2",
    "react-native-paper": "^2.4.0",
    "react-native-vector-icons": "^6.1.0",
    "react-navigation": "^3.0.9"
  },
  "devDependencies": {
    "babel-jest": "23.6.0",
    "detox": "^9.1.2",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "^0.51.1",
    "mocha": "^5.2.0",
    "react-test-renderer": "16.6.3"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "testMatch": [ "**/__tests__/**/*.js?(x)", "**/?(*.)+(test).js?(x)" ],
    "setupFiles": [
      "./jestSetup.js"
    ]
  },
  "detox": {
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/myoutfitapp.app",
        "build": "xcodebuild -project ios/myoutfitapp.xcodeproj -scheme myoutfitapp -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7"
      }
    },
    "test-runner": "jest"
  }
}